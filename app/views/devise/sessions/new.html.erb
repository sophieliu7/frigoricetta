<div class="container">
  <div class="row form-sign-in">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h2>Se conneter</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" ,class: "input-light"} %>
          <%= f.input :password,
                      required: false,
                      label: 'Mot de passe',
                      input_html: { autocomplete: "current-password" ,class: "input-light"} %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class:"btn-frigo btn-form" %>
        </div>
      <% end %>
      <br>
<div class="text-center">

      <%= render "devise/shared/links" %>
</div>
    </div>
  </div>
</div>

