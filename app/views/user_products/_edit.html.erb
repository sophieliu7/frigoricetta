<div class="row new-form-user-prod-edit">
  <div class="col-xs-12 col-sm-8 col-sm-offset-2">

      <h3><%= user_product.product.name %></h3>

      <%= simple_form_for user_product do |f| %>

      <%= f.input :place, label: "Où veux-tu le ranger ?", placeholder: "placard, frigo...", input_html: { class: "input-light" }, label_html: { class: "font-20"} %>

      <%= f.input :purchase_date, label: "Date d'achat", as: :string, required: false, input_html: { class: "datepicker-purchase input-light"}, label_html: { class: "font-20"}  %>
      <%= f.input :peremption_date, label: "Date de péremption", as: :string, required: false, input_html: {class: "datepicker-peremption input-light"}, label_html: { class: "font-20"}  %>

      <div class="text-center">
      <%= f.button :submit, 'Modifier cet aliment', class: "btn-frigo btn-form"%>
      </div>
      <% end %>

  </div>
</div>

