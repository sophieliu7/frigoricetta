<div class="row new-form-user-prod-edit">
  <div class="col-xs-12 col-sm-8 col-sm-offset-2">

      <h3><%= user_product.product.name %></h3>

      <%= simple_form_for user_product do |f| %>
      <p>

      <%= f.input :place, label: "Où est-il rangé?", placeholder: "placard, frigo...", input_html: { class: "input-light" } %>
      </p>
      <%= f.input :purchase_date, label: "Date d'achat", as: :string, required: false, input_html: { class: "datepicker-purchase"} %>
      <%= f.input :peremption_date, label: "Date de péremption", as: :string, required: false, input_html: {class: "datepicker-peremption"} %>

      <%= f.button :submit, 'Modifier', class: "btn-frigo"%>
      <% end %>

  </div>
</div>

