<%= simple_form_for user_product do |f| %>

  <%= hidden_field_tag :product_name, @product_name %>

  <!-- search pour catÃ©gories -->
  <%= select_tag("main_category", options_for_select(Category.main_categories), id: "main_category", class: "new-main-cat") %>

  <div class="js-categories-container">
    <% Category.grouped_by_main_category.each do |main_category, categories| %>
      <%= select_tag("category_#{main_category.gsub(' ', '').gsub('&', '_').downcase}", options_from_collection_for_select(categories, :id, :name), class: "js-categories #{'hidden' unless main_category == Category.main_categories.first}") %>
    <% end %>
  </div>

  <%= hidden_field_tag :category_id %>

  <%= f.input :place %>

  <%= f.input :purchase_date, as: :string, required: false, input_html: {class: "datepicker-purchase"} %>

  <%= f.input :peremption_date, as: :string, required: false, input_html: {class: "datepicker-peremption"} %>
  <%= f.button :submit, "Ajouter un aliment", class:"btn btn-primary btn-frigo" %>
<% end %>



