      <h1>Ajouter un aliment</h1>
      <%= form_tag load_form_path, method: :get, remote: true do %>

        <%= collection_select :products, :product_id, Product.all, :id, :name, {}, class: "search-form-new" %>
        <br>

        <%= submit_tag "Entrer", class: "btn btn-frigo"  %>
      <% end %>
      <div id="followingform"></div>

      <br>
      <%= link_to "Back to products", user_products_path, class: "btn btn-frigo" %>
    </div>
  </div>
</div>

